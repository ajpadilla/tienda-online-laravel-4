.btn
  text-transform uppercase

.pi-price
  color red
  font 18px 'PT Sans Narrow', sans-serif
  float left
  padding-top 1px

.product-item
  margin-right 10px
  padding 12px 12px 16px
  background #fff
  position relative

  .add2cart
    float right
    color #a8aeb3
    border 1px #ededed solid
    padding 3px 6px

    :hover
      color #fff !important
      background #E84D1C !important
      border-color #E84D1C

    h3
    font 300 14px 'Open Sans', sans-serif
    padding-top 10px
    padding-bottom 4
    text-transform uppercase

    a
      color #3e4d5c

    :hover
      box-shadow 5px 5px rgba(234, 234, 234, 0.9)

  .btn:hover
    background red
    border-color #c8c8c8

.pi-img-wrapper
  position relative

  div
    background rgba(0,0,0,0.3)
    position absolute
    left 0
    top 0
    display none
    width 100%
    height 100%
    text-align center

.btn-default
    padding 3px 10px
    color #fff
    border 1px #fff solid
    margin -13px 5px 0
    background transparent
    position relative
    top 50%
    font-size 12px


.product-item:hover
  .pi-img-wrapper
    div
      display block