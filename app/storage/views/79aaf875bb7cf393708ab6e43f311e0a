			<div class="row">
				<?php echo Form::open(['url' => LaravelLocalization::transRoute('discountType.store'),'class'=>'form-horizontal','method' => 'POST','id' => 'formCreateDiscountType']); ?>

				<div class="col-sm-6 b-r">
					<div class="form-group">
						<?php echo Form::label('language_id', trans('discountType.labels.language'),['class'=>'col-sm-2 control-label']); ?>

