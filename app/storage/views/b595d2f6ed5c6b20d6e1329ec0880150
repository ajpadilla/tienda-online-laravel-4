	<section id="fancybox-edit-discount-lang">
		<div class="row">
			<div class="col-lg-12">
				<div class="ibox float-e-margins">
					<div class="ibox-title">
						<h5><?php echo trans('products.edit_language.title'); ?></h5>
					</div>
					<div class="ibox-content">
						<div class="row">
							<?php echo Form::open(['route' => 'discounts.routes.api.saveLang', 'class' => 'form-horizontal', 'id' => 'form-edit-discount-language']); ?>

								<?php echo $__env->make('discounts.partials._form_language', array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>
