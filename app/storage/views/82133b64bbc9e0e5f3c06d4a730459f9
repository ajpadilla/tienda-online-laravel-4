<script>
	$(document).ready(function () {
		$.ajax({
			type: 'GET',
			url:'<?php echo URL::to('/returnLanguages/'); ?>',
			dataType:'json',
			success: function(response) {
				if (response.success == true) {
					$('#language').html('');
					$('#language').append('<option value=\"\"><?php echo Lang::get('menu.language'); ?></option>');
					$.each(response.languages,function (k,v){
						$('#language').append('<option value=\"'+k+'\">'+v+'</option>');
					});
				}else{
					$('#language').html('');
					$('#language').append('<option value=\"\"><?php echo Lang::get('menu.language'); ?> </option>');
				}
			},
			error : function(jqXHR, status, error) {
				console.log('Disculpe, existi√≥ un problema');
			},
		});
		$('select#language').on('change',function(){
    		var valor = $(this).val();
    		$('#lang_id').val(valor);
		});
	});
</script>
<?php echo $__env->yieldContent('scripts'); ?>
